{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "overrides": [
    {
      "extends": ["airbnb-typescript/base"],
      "files": ["*.ts"],
      "rules": {
        "linebreak-style": "off",
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": ["*-const.ts"],
      "rules": {
        "import/prefer-default-export": "off"
      }
    }
  ],
  "ignorePatterns": ["dist"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json"
  }
}
